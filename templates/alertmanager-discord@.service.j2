#
# Ansible managed
#
[Unit]
Description=AlertManager Discord WebHook Daemon
After=network-online.target

[Service]
Type=simple
PIDFile=/var/run/alertmanager-discord.pid
User=alertmanager-discord
Group=alertmanager-discord
PermissionsStartOnly=true
EnvironmentFile=/etc/alertmanager-discord/%I.conf
ExecStart=/usr/local/bin/alertmanager-discord

SyslogIdentifier=alertmanager-discord
KillMode=process
Restart=always

[Install]
WantedBy=multi-user.target
